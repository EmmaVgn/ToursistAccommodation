<h1>Bravo pour votre réservation n°{{ booking.id }}</h1>

<p>Merci à vous
	{{ user.firstname }}
	{{ user.lastname }}
	!</p>

<table>
	<thead>
		<th>Voyage</th>
		<th>Date de d'arrivée</th>
		<th>Date de départ</th>
		<th>Lieu</th>
	</thead>
	<tbody>
		<td>{{ booking.add.title }}</td>
		<td>{{ booking.checkIn|format_datetime('long', 'none', locale='fr') }}</td>
		<td>{{ booking.checkOut|format_datetime('long', 'none', locale='fr') }}</td>
	</tbody>
	<tfoot>
		<tr>
			<td colspan="3">Total :</td>
			<td>{{ booking.amount / 100 }}
				€</td>
		</tr>
	</tfoot>
</table>
