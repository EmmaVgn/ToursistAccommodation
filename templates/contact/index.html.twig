{% extends 'base.html.twig' %}

{% block title %}Nous contacter
{% endblock %}

{% block body %}
	<h1>Nous contacter</h1>
	{{ form_start(form) }}
	{{ form_errors(form) }}
	<div class="row">
		<div class="col-md-6 mb-3">
			{{ form_row(form.firstname, {'attr': {'class': 'form-control mb-3'}}) }}
			{{ form_row(form.lastname, {'attr': {'class': 'form-control mb-3'}}) }}
		</div>
		<div class="col-md-6 mb-3">
			{{ form_row(form.phone, {'attr': {'class': 'form-control mb-3'}}) }}
			{{ form_row(form.email, {'attr': {'class': 'form-control mb-3'}}) }}
		</div>
		<div class="col-md-6 mb-3">
			{{ form_row(form.content, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
	<button class="btn btn-secondary mt-3 mb-10" type="submit">
		<span>Nous contacter</span>
	</button>
	{{ form_end(form) }}
	<div>
		<h2>Nous trouver</h2>
		<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2837.4345362748877!2d0.5832352768094319!3d44.66990347107215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x12aae145148e5047%3A0x1f69e49e3cbc07e0!2sLes%20maisons%20de%20Marie!5e0!3m2!1sfr!2sfr!4v1715858987356!5m2!1sfr!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>

	</div>

{% endblock %}
